<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree editable="bottom" decoration-success="status=='accepted'" decoration-danger="status=='refused'">
                <field name="price"/>
                <field name="partner_id" string="Partner"/>
                <field name="validity"/>
                <field name="deadline_date"/>
                <button name="accept_offer" type="object" string="Accept" icon="fa-check" attrs="{'invisible': ['|', ('status', '=', 'accepted'), ('status', '=', 'refused')]}"/>
                <button name="deny_offer" type="object" string="Deny" icon="fa-level-down" attrs="{'invisible': ['|', ('status', '=', 'accepted'), ('status', '=', 'refused')]}"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="res_model">estate.property.offer</field>
        <field name="name">Offers</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Offers
            </p>
        </field>
    </record>

    <record id="estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Offer to my new House">
                <sheet>
                    <group>
                        <group>
                            <field name="price"/>
                            <field name="partner_id"/>
                            <field name="validity"/>
                            <field name="deadline_date"/>
                            <field name="status"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>